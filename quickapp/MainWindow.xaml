<Window x:Class="quickapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quickapp"
        mc:Ignorable="d"
        MinHeight="560" MinWidth="700" Height="560" Width="700"  WindowStyle="ToolWindow"
        SizeChanged="MainWindow_SizeChanged" ShowInTaskbar="False" Closing="Window_Closing">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Button.xaml"/>
                <ResourceDictionary Source="Styles/Search.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="7" Background="#0a100d" Orientation="Horizontal">
            <TextBlock Text="ЧАСТО ИСПОЛЬЗУЕМЫЕ:"
                       Foreground="AliceBlue"
                       FontSize="15"
                       FontFamily="Segoe UI Black"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  x:Name="oftexe1"
                     Width="50" Height="50"
                     Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  x:Name="oftexe2"
                     Width="50" Height="50"
                     Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  x:Name="oftexe3"
                     Width="50"
                     Height="50"
                     Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
        <StackPanel Grid.Column="5" Grid.ColumnSpan="6" VerticalAlignment="Center">
            <TextBox x:Name="SearchTextBox"
             Width="150" Height="30"
             BorderThickness="1"
             BorderBrush="AliceBlue"
             VerticalContentAlignment="Center"
             Style="{StaticResource searh}"
             TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="FilterButton" 
            Content="Фильтр"
            Width="80"
            Height="35"
            Style="{StaticResource ModernButtonStyle}" Click="FilterButton_Click_1"/>

            <ListBox x:Name="FilterList"
             Width="120"
             Margin="3,0,0,0"
             Visibility="Collapsed"
             SelectionChanged="FilterList_SelectionChanged">
                <ListBoxItem Content="По имени"/>
                <ListBoxItem Content="По дате"/>
                <ListBoxItem Content="По частоте запуска"/>
            </ListBox>
            <Button x:Name="ResetFilterButton"
            Content="Сбросить"
            Width="80"
            Height="35"
            Margin="5,0,0,0"
            Style="{StaticResource ModernButtonStyle}"
            Click="ResetFilterButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="DelApp"
                    Content="Удалить приложение"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="180"
                    Height="35" Click="DeleteApp_Click"
                />
        </StackPanel>

        <UniformGrid x:Name="StackP1" 
             Grid.Row="2" 
             Grid.ColumnSpan="7" 
             Columns="5" 
             Rows="1"/>
        <StackPanel Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddApp"
                    Content="Добавить приложение"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="180"
                    Height="35" Click="AddApp_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
